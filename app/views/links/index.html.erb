<h1>Links</h1>

<%= form_with model: Link.new do |form| %>
    <div class="flex gap-2 items-center">
        <%= form.url_field :url, required: true, placeholder: "https://example.com", class: "flex-grow rounded" %>
        <%= form.button "Save", class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold    hover:text-white py-2 px-6 border border-blue-500 hover:border-transparent rounded" %>
    </div>
<% end %>

<div class="mt-6">
    <%= render @links %>
</div>