<div class="p-2 w-full mx-auto max-w-2xl" id="<%= dom_id(link) %>">
    <div class="flex justify-between bg-gray-100 hover:bg-gray-200 p-2">
        <%= link_to link_path(link.to_param), class: "flex-1 no-underline" do %>
            <div><%= link.url %></div>
        <% end %>
        <div class="me-2"><%= pluralize(link.views_count, "views") %></div>
        <div>
            <%= link_to view_path(link), class: "hover:text-blue-500", target: :_blank, data: {turbo: false}  do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
            <% end%>
        </div>
        
    </div>
</div>